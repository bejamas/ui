---
// import { Icon } from "@astrojs/starlight/components";
import Button from "virtual:starlight-theme-bejamas/components/Button.astro";
import { ArrowRight, ArrowLeft } from "@lucide/astro";

const { dir, pagination } = Astro.locals.starlightRoute;
const { prev, next } = pagination;
const isRtl = dir === "rtl";
---

<div class="flex justify-between print:hidden" dir={dir}>
  {
    prev && (
      <Button as="a" href={prev.href} rel="prev" variant="outline">
        {isRtl ? <ArrowRight class="size-4" /> : <ArrowLeft class="size-4" />}
        {prev.label}
      </Button>
    )
  }
  {
    next && (
      <Button as="a" href={next.href} rel="next" variant="outline">
        {isRtl ? <ArrowLeft class="size-4" /> : <ArrowRight class="size-4" />}
        {next.label}
      </Button>
    )
  }
</div>

<div class="text-center text-sm text-muted-foreground page-footer">
  <p>
    Built at <a href="https://bejamas.com" class="underline underline-offset-4"
      >Bejamas</a
    >.
  </p>
</div>

<style>
  @layer starlight.core {
    .pagination-links {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(min(18rem, 100%), 1fr));
      gap: 1rem;
    }

    [rel="next"] {
      justify-content: end;
      text-align: end;
      flex-direction: row-reverse;
    }

    svg {
      flex-shrink: 0;
    }

    .page-footer {
      margin-top: calc(var(--spacing) * 6);
    }
  }
</style>
