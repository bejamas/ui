---
import { cn } from "@bejamas/ui/lib/utils";
import type { HTMLAttributes } from "astro/types";

type FooterDensity = "tight" | "normal" | "roomy";
type FooterSeparator = "none" | "soft" | "strong";

type Props = {
  separator?: FooterSeparator;
  density?: FooterDensity;
  class?: string;
  style?: string;
} & Omit<HTMLAttributes<"div">, "style">;

const {
  class: className = "",
  style: inlineStyle = "",
  separator = "none",
  density = "normal",
  ...rest
} = Astro.props as Props;

const getDensityClass = (d: FooterDensity) => {
  switch (d) {
    case "tight": return "py-4";
    case "roomy": return "py-16";
    default: return "py-8";
  }
};
---

<div
  {...rest}
  data-slot="footer-top"
  class={cn(
    getDensityClass(density),
    separator === "soft" && "border-b border-footer-border/40",
    separator === "strong" && "border-b border-footer-border",
    className,
  )}
  style={inlineStyle || undefined}
>
  <slot />
</div>

