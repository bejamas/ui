---
import type { HTMLAttributes, HTMLTag } from "astro/types";
import { cn } from "@bejamas/ui/lib/utils";
import { Textarea } from "../textarea";

type Props = {
  as?: HTMLTag;
  class?: string;
} & HTMLAttributes<"textarea">;

const { as: rawTag, class: className = "", ...rest } = Astro.props as Props;

const Tag = rawTag ?? undefined;

const textareaClasses =
  "flex-1 min-w-0 resize-none rounded-none border-0 bg-transparent shadow-none focus-visible:ring-0 dark:bg-transparent dark:disabled:bg-transparent group-data-[size=sm]/input-group:px-2.5 group-data-[size=sm]/input-group:py-2 group-data-[size=sm]/input-group:text-xs group-data-[size=default]/input-group:px-3 group-data-[size=default]/input-group:py-2.5 group-data-[size=default]/input-group:text-sm group-data-[size=lg]/input-group:px-3.5 group-data-[size=lg]/input-group:py-3 group-data-[size=lg]/input-group:text-base";
---

{
  Tag ? (
    <Tag
      {...rest}
      data-slot="input-group-control"
      class={cn(textareaClasses, className)}
    />
  ) : (
    <Textarea
      data-slot="input-group-control"
      class={cn(textareaClasses, className)}
      {...(rest as any)}
    />
  )
}
