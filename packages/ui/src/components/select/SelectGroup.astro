---
import type { HTMLAttributes } from "astro/types";
import { cn } from "@bejamas/ui/lib/utils";

type Props = {
  label?: string;
  class?: string;
} & HTMLAttributes<"optgroup">;

const {
  label,
  class: className = "",
  ...rest
} = Astro.props as Props;
---

<optgroup
  {...rest}
  data-slot="select-group"
  label={label}
  class={cn("py-1", className)}
>
  <slot />
</optgroup>

