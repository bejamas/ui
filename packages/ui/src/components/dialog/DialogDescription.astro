---
import { cn } from "@bejamas/ui/lib/utils";
import type { HTMLAttributes, HTMLTag } from "astro/types";

type Props = {
  as?: HTMLTag;
  class?: string;
} & HTMLAttributes<"p">;

const {
  as: Tag = "p",
  class: className = "",
  ...rest
} = Astro.props as Props;
---

<Tag
  {...rest}
  data-slot="dialog-description"
  class={cn("text-sm text-muted-foreground", className)}
>
  <slot />
</Tag>

