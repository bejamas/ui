---
import { cn } from "@bejamas/ui/lib/utils";
import type { HTMLAttributes, HTMLTag } from "astro/types";

type Props = {
  as?: HTMLTag;
  class?: string;
} & HTMLAttributes<"div">;

const {
  as: Tag = "div",
  class: className = "",
  ...rest
} = Astro.props as Props;
---

<Tag
  {...rest}
  data-slot="item-content"
  class={cn(
    "flex flex-1 flex-col gap-1 [&+[data-slot=item-content]]:flex-none",
    className,
  )}
>
  <slot />
</Tag>

