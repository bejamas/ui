---
import { cn } from "@bejamas/ui/lib/utils";
import { Separator } from "../separator";
import type { HTMLAttributes } from "astro/types";

type Props = {
  class?: string;
} & HTMLAttributes<"div">;

const {
  class: className = "",
  ...rest
} = Astro.props as Props;
---

<Separator
  {...rest}
  data-slot="item-separator"
  aria-hidden="true"
  class={cn("my-0", className)}
/>

