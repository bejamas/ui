---
import { cva } from "class-variance-authority";
import { cn } from "@bejamas/ui/lib/utils";
import type { HTMLAttributes, HTMLTag } from "astro/types";

type Props = {
  value: string;
  disabled?: boolean;
  class?: string;
} & HTMLAttributes<"button">;

const {
  value,
  disabled = false,
  class: className = "",
  ...rest
} = Astro.props as Props;
---

<button
  {...rest}
  type="button"
  role="tab"
  data-slot="tabs-trigger"
  data-value={value}
  class={cn(
    "inline-flex items-center relative z-1 justify-center rounded-md px-3 py-1.5 transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring/50",
    className,
  )}
>
  <slot />
</button>
