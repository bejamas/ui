---
import { cn } from "@bejamas/ui/lib/utils";
import type { HTMLAttributes, HTMLTag } from "astro/types";

type Props = {
  as?: HTMLTag;
  class?: string;
} & HTMLAttributes<"div">;

const {
  as: Tag = "div",
  class: className = "",
  ...rest
} = Astro.props as Props;
---

<Tag
  {...rest}
  data-slot="alert-title"
  class={cn(
    "col-start-2 line-clamp-1 min-h-4 font-medium tracking-tight",
    className,
  )}
>
  <slot />
</Tag>

