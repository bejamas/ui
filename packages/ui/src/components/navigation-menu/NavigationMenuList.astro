---
import type { HTMLAttributes } from "astro/types";
import { cn } from "@bejamas/ui/lib/utils";

type Props = {
  class?: string;
} & HTMLAttributes<"ul">;

const { class: className = "", ...rest } = Astro.props as Props;
---

<ul
  {...rest}
  data-slot="navigation-menu-list"
  class={cn(
    "flex list-none relative z-10 [&_[data-slot='navigation-menu-content'][data-state='active']]:animate-in [&_[data-slot='navigation-menu-content'][data-state='inactive']]:animate-out [&_[data-slot='navigation-menu-content'][data-motion='from-right']]:slide-in-from-right-4 [&_[data-slot='navigation-menu-content'][data-motion='from-left']]:slide-in-from-left-4 [&_[data-slot='navigation-menu-content'][data-motion='to-right']]:slide-to-right-4 [&_[data-slot='navigation-menu-content'][data-motion='to-left']]:slide-to-left-4",
    className,
  )}
>
  <slot />
</ul>
