---
import type { HTMLAttributes } from "astro/types";
import { cn } from "@bejamas/ui/lib/utils";

type Props = {
  class?: string;
} & HTMLAttributes<"div">;

const { class: className = "", ...rest } = Astro.props as Props;
---

<div
  {...rest}
  data-slot="navigation-menu-viewport"
  class={cn(
    "absolute bg-popover border data-instant:transition-opacity duration-150 top-full rounded-lg shadow-lg overflow-hidden mt-2 opacity-0 pointer-events-none data-[state=open]:opacity-100 data-[state=open]:pointer-events-auto",
    "translate-x-[var(--viewport-left, 0)]",
    className,
  )}
  style="width: var(--viewport-width, 0); height: var(--viewport-height, 0);"
>
</div>
