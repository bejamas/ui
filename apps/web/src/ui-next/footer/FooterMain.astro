---
import { cn } from "@bejamas/ui/lib/utils";
import type { HTMLAttributes } from "astro/types";

type FooterDensity = "tight" | "normal" | "roomy";

type Props = {
  density?: FooterDensity;
  class?: string;
  style?: string;
} & Omit<HTMLAttributes<"div">, "style">;

const {
  class: className = "",
  style: inlineStyle = "",
  density = "normal",
  ...rest
} = Astro.props as Props;

const getDensityClass = (d: FooterDensity) => {
  switch (d) {
    case "tight": return "py-4";
    case "roomy": return "py-16";
    default: return "py-8";
  }
};
---

<div
  {...rest}
  data-slot="footer-main"
  class={cn(getDensityClass(density), className)}
  style={inlineStyle || undefined}
>
  <slot />
</div>

