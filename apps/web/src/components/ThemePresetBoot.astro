<script>
  try {
    var savedKey = localStorage.getItem("theme-preset");
    if (savedKey) {
      // Ensure cookie is set so the CSS endpoint can resolve the theme
      document.cookie = "theme=" + savedKey + "; path=/;";
      var id = "bejamas-theme-css";
      var existing = document.getElementById(id);
      var href = "/r/themes/current-theme.css";
      if (!existing) {
        var link = document.createElement("link");
        link.id = id;
        link.rel = "stylesheet";
        link.href = href;
        document.head.appendChild(link);
      } else {
        existing.href = href;
      }
    }
  } catch (_) {
    /* no-op */
  }
  // If no savedKey, fallback to base styles; page JS will apply selection later
</script>
