---
import "@/styles/blocks.css";
import "@bejamas/ui/styles/globals.css";
import PresetSwitcher from "./PresetSwitcher.astro";
import {
  Tabs,
  TabsList,
  TabsTrigger,
  TabsIndicator,
} from "@bejamas/ui/components/tabs";
import { SunIcon, MoonIcon, LaptopIcon } from "@lucide/astro";

const { theme = "current-theme" } = Astro.props;

const pages = [
  { href: "/kitchen-sink/accordion", label: "Accordion", js: true },
  { href: "/kitchen-sink/alert", label: "Alert" },
  { href: "/kitchen-sink/avatar", label: "Avatar" },
  { href: "/kitchen-sink/badge", label: "Badge" },
  { href: "/kitchen-sink/breadcrumb", label: "Breadcrumb" },
  { href: "/kitchen-sink/button", label: "Button" },
  { href: "/kitchen-sink/button-group", label: "Button Group" },
  { href: "/kitchen-sink/card", label: "Card" },
  { href: "/kitchen-sink/carousel", label: "Carousel" },
  { href: "/kitchen-sink/checkbox", label: "Checkbox" },
  { href: "/kitchen-sink/collapsible", label: "Collapsible", js: true },
  { href: "/kitchen-sink/combobox", label: "Combobox", js: true },
  { href: "/kitchen-sink/date", label: "Date" },
  { href: "/kitchen-sink/dialog", label: "Dialog", js: true },
  { href: "/kitchen-sink/dropdown-menu", label: "Dropdown Menu", js: true },
  { href: "/kitchen-sink/forms-actions", label: "Forms + Actions" },
  { href: "/kitchen-sink/input", label: "Input" },
  { href: "/kitchen-sink/input-group", label: "Input Group" },
  { href: "/kitchen-sink/item", label: "Item" },
  { href: "/kitchen-sink/kbd", label: "Kbd" },
  { href: "/kitchen-sink/label", label: "Label" },
  { href: "/kitchen-sink/link-group", label: "Link Group" },
  { href: "/kitchen-sink/marquee", label: "Marquee" },
  { href: "/kitchen-sink/native-select", label: "Native Select" },
  { href: "/kitchen-sink/navigation-menu", label: "Navigation Menu", js: true },
  { href: "/kitchen-sink/popover", label: "Popover", js: true },
  { href: "/kitchen-sink/radio-group", label: "Radio Group" },
  { href: "/kitchen-sink/select", label: "Select", js: true },
  { href: "/kitchen-sink/separator", label: "Separator" },
  { href: "/kitchen-sink/skeleton", label: "Skeleton" },
  { href: "/kitchen-sink/slider", label: "Slider", js: true },
  { href: "/kitchen-sink/spinner", label: "Spinner" },
  { href: "/kitchen-sink/sticky-surface", label: "Sticky Surface" },
  { href: "/kitchen-sink/switch", label: "Switch" },
  { href: "/kitchen-sink/tabs", label: "Tabs", js: true },
  { href: "/kitchen-sink/textarea", label: "Textarea" },
  { href: "/kitchen-sink/toggle", label: "Toggle", js: true },
  { href: "/kitchen-sink/toggle-group", label: "Toggle Group", js: true },
  { href: "/kitchen-sink/tooltip", label: "Tooltip", js: true },
];

const currentPath = Astro.url.pathname.replace(/\/$/, "");
---

<html class="bg-background">
  <head>
    <meta charset="utf-8" />
    <meta name="robots" content="noindex, nofollow" />
    <script is:inline>
      const storageKey = "starlight-theme";
      const parseTheme = (t) =>
        t === "auto" || t === "dark" || t === "light" ? t : "auto";
      const getPreferredColorScheme = () =>
        matchMedia("(prefers-color-scheme: light)").matches ? "light" : "dark";
      const loadTheme = () => {
        try {
          return parseTheme(
            typeof localStorage !== "undefined" &&
              localStorage.getItem(storageKey),
          );
        } catch {
          return "auto";
        }
      };
      function applyTheme(theme) {
        const effective = theme === "auto" ? getPreferredColorScheme() : theme;
        document.documentElement.dataset.theme = effective;
        document.documentElement.classList.remove("light", "dark");
        document.documentElement.classList.add(effective);
      }
      // Initialize on load
      applyTheme(loadTheme());
      // Sync via storage events (parent <-> iframe)
      window.addEventListener("storage", (event) => {
        if (event.key === storageKey) applyTheme(loadTheme());
      });
      // React to system scheme while in 'auto'
      matchMedia("(prefers-color-scheme: light)").addEventListener(
        "change",
        () => {
          if (loadTheme() === "auto") applyTheme("auto");
        },
      );
    </script>
  </head>
  <body class="antialiased bg-muted/30">
    <link rel="stylesheet" href={`/r/themes/${theme}.css`} />

    <div class="flex min-h-screen">
      <aside class="w-56 shrink-0 sticky top-0 h-screen overflow-y-auto">
        <div class="p-4">
          <a
            href="/kitchen-sink"
            class="text-sm font-semibold text-foreground tracking-wide uppercase"
          >
            Kitchen Sink
          </a>
        </div>

        <div class="px-4 pb-4 flex flex-col gap-2">
          <PresetSwitcher />
          <ks-theme-select>
            <Tabs class="ks-theme-tabs" id="ks-theme-tabs">
              <TabsList class="h-9 p-1 py-0.5 rounded-md w-full">
                <TabsIndicator
                  class="rounded-sm duration-150 transition-transform"
                />
                <TabsTrigger
                  value="light"
                  class="ks-theme-tab px-1.5 h-7 flex-1"
                  title="Light theme"
                >
                  <SunIcon class="size-4" />
                </TabsTrigger>
                <TabsTrigger
                  value="dark"
                  class="ks-theme-tab px-1.5 h-7 flex-1"
                  title="Dark theme"
                >
                  <MoonIcon class="size-4" />
                </TabsTrigger>
                <TabsTrigger
                  value="auto"
                  class="ks-theme-tab px-1.5 h-7 flex-1"
                  title="Auto (system)"
                >
                  <LaptopIcon class="size-4" />
                </TabsTrigger>
              </TabsList>
            </Tabs>
          </ks-theme-select>
        </div>

        <nav class="flex flex-col gap-0.5 px-2 pb-4">
          {
            pages.map(({ href, label, js }) => (
              <a
                href={href}
                class:list={[
                  "px-3 py-2 rounded-md text-sm transition-colors flex items-center",
                  currentPath === href
                    ? "bg-muted text-foreground font-medium"
                    : "text-muted-foreground hover:text-foreground hover:bg-muted/50",
                ]}
              >
                {label}
                {js && (
                  <span class="ml-auto text-[10px] font-medium text-muted-foreground/70 border border-border/60 rounded px-1 py-0.5 leading-none">
                    JS
                  </span>
                )}
              </a>
            ))
          }
        </nav>
      </aside>

      <main class="flex-1 min-w-0 pr-3 py-3">
        <div class="bg-background rounded-2xl border border-border">
          <slot />
        </div>
      </main>
    </div>
  </body>
</html>

<script>
  type Theme = "auto" | "dark" | "light";
  const storageKey = "starlight-theme";

  const parseTheme = (theme: unknown): Theme =>
    theme === "auto" || theme === "dark" || theme === "light" ? theme : "auto";

  const loadTheme = (): Theme =>
    parseTheme(
      typeof localStorage !== "undefined" && localStorage.getItem(storageKey),
    );

  function storeTheme(theme: Theme): void {
    if (typeof localStorage !== "undefined") {
      localStorage.setItem(
        storageKey,
        theme === "light" || theme === "dark" ? theme : "",
      );
    }
  }

  const getPreferredColorScheme = (): Theme =>
    matchMedia("(prefers-color-scheme: light)").matches ? "light" : "dark";

  function onThemeChange(theme: Theme): void {
    const resolved = theme === "auto" ? getPreferredColorScheme() : theme;
    document.documentElement.dataset.theme = resolved;
    document.documentElement.classList.remove("light", "dark");
    document.documentElement.classList.add(resolved);
    storeTheme(theme);
    window.dispatchEvent(
      new CustomEvent("theme-toggle-changed", { detail: { theme: resolved } }),
    );
    document
      .querySelector<HTMLDivElement>("#ks-theme-tabs")
      ?.dispatchEvent(
        new CustomEvent("tabs:set", { detail: { value: theme } }),
      );
  }

  matchMedia("(prefers-color-scheme: light)").addEventListener("change", () => {
    if (loadTheme() === "auto") onThemeChange("auto");
  });

  class KsThemeSelect extends HTMLElement {
    connectedCallback() {
      const currentTheme = loadTheme();
      onThemeChange(currentTheme);

      const el = document.querySelector("#ks-theme-tabs");
      el?.addEventListener("tabs:change", (e: any) => {
        onThemeChange(parseTheme(e.detail.value));
      });
    }
  }

  if (!customElements.get("ks-theme-select")) {
    customElements.define("ks-theme-select", KsThemeSelect);
  }
</script>

<style>
  .ks-theme-tabs {
    gap: 0;
  }

  .ks-theme-tab[data-state="active"] {
    color: var(--foreground);
  }

  .ks-theme-tab[data-state="inactive"] {
    color: var(--muted-foreground);
  }
</style>
