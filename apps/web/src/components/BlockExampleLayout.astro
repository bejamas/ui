---
import "@/styles/blocks.css";
import "@bejamas/ui/styles/globals.css";

interface Props {
  theme?: string;
  title?: string;
}

const { theme = "current-theme", title } = Astro.props;
---

<html lang="en" class="bg-background">
  <head>
    <meta charset="utf-8" />
    <meta name="robots" content="noindex, nofollow" />
    {title && <title>{title}</title>}
    <script is:inline>
      const storageKey = "starlight-theme";
      const parseTheme = (t) =>
        t === "auto" || t === "dark" || t === "light" ? t : "auto";
      const getPreferredColorScheme = () =>
        matchMedia("(prefers-color-scheme: light)").matches ? "light" : "dark";
      const loadTheme = () => {
        try {
          return parseTheme(
            typeof localStorage !== "undefined" &&
              localStorage.getItem(storageKey),
          );
        } catch {
          return "auto";
        }
      };
      function applyTheme(theme) {
        const effective = theme === "auto" ? getPreferredColorScheme() : theme;
        document.documentElement.dataset.theme = effective;
        // add class to body
        document.documentElement.classList.remove("light", "dark");
        document.documentElement.classList.add(effective);
      }
      // Initialize on load
      applyTheme(loadTheme());
      // Sync via storage events (parent <-> iframe)
      window.addEventListener("storage", (event) => {
        if (event.key === storageKey) applyTheme(loadTheme());
      });
      // React to system scheme while in 'auto'
      matchMedia("(prefers-color-scheme: light)").addEventListener(
        "change",
        () => {
          if (loadTheme() === "auto") applyTheme("auto");
        },
      );
    </script>
  </head>
  <body class="antialiased bg-background">
    <link rel="stylesheet" href={`/r/themes/${theme}.css`} />

    <slot />

    <script>
      import {
        getCurrentMode,
        getStoredPreset,
      } from "../utils/themes/preset-store.ts";
      import { syncGradientImages } from "../utils/themes/gradient-image-runtime.ts";

      const themeStorageKey = "starlight-theme";
      const presetStorageKey = "theme-preset";

      const toMode = (value: unknown): "light" | "dark" =>
        value === "dark" ? "dark" : "light";

      function syncPreviewGradientImages(modeOverride?: "light" | "dark") {
        const themeKey = getStoredPreset() || "default";
        const mode = modeOverride ?? toMode(getCurrentMode());
        syncGradientImages({ themeKey, mode });
      }

      syncPreviewGradientImages();

      window.addEventListener("storage", (event) => {
        if (
          event.key === themeStorageKey ||
          event.key === presetStorageKey ||
          event.key === "theme"
        ) {
          syncPreviewGradientImages();
        }
      });

      window.addEventListener("theme-toggle-changed", (event) => {
        const eventTheme = (event as CustomEvent<{ theme?: unknown }>).detail
          ?.theme;
        const mode =
          eventTheme === "light" || eventTheme === "dark"
            ? eventTheme
            : undefined;
        syncPreviewGradientImages(mode);
      });

      const prefersLight = matchMedia("(prefers-color-scheme: light)");
      prefersLight.addEventListener("change", () => {
        syncPreviewGradientImages();
      });

      const observer = new MutationObserver(() => {
        syncPreviewGradientImages();
      });

      observer.observe(document.documentElement, {
        attributes: true,
        attributeFilter: ["data-theme", "class"],
      });

      document.addEventListener("astro:after-swap", () => {
        syncPreviewGradientImages();
      });
    </script>
  </body>
</html>

<style>
  ::-webkit-scrollbar {
    width: 10px;
  }

  /* Track */
  ::-webkit-scrollbar-track {
    background: #f1f1f1;
  }

  /* Handle */
  ::-webkit-scrollbar-thumb {
    background: #888;
  }

  /* Handle on hover */
  ::-webkit-scrollbar-thumb:hover {
    background: #555;
  }
</style>
