<script>
  const combobox = document.getElementById("country-combobox");
  const flag = document.getElementById("country-flag") as HTMLImageElement;
  const input = combobox?.querySelector<HTMLInputElement>(
    '[data-slot="combobox-input"]',
  );

  combobox?.addEventListener("combobox:change", ((e: CustomEvent) => {
    const value = e.detail?.value;
    if (value && input) {
      flag.src = `https://flag.vercel.app/m/${value.toUpperCase()}.svg`;
      flag.classList.remove("hidden");
      input.style.paddingLeft = "2.25rem";
    } else if (input) {
      flag.classList.add("hidden");
      input.style.paddingLeft = "";
    }
  }) as EventListener);

  // Price range slider
  const slider = document.getElementById("price-slider");
  const priceMin = document.getElementById("price-min");
  const priceMax = document.getElementById("price-max");

  slider?.addEventListener("slider:change", ((e: CustomEvent) => {
    const [min, max] = e.detail.value;
    if (priceMin) priceMin.textContent = `$${min * 10}`;
    if (priceMax) priceMax.textContent = `$${max * 10}`;
  }) as EventListener);
</script>
