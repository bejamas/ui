---
import KitchenSinkLayout from "@/components/KitchenSinkLayout.astro";
import KitchenSinkSection from "@/components/KitchenSinkSection.astro";
import { Badge } from "@bejamas/ui/components/badge";
import { CheckIcon, XIcon, AlertTriangleIcon, InfoIcon } from "@lucide/astro";
---

<KitchenSinkLayout>
  <section class="max-w-5xl mx-auto py-20 px-5 space-y-12">
    <h1 class="text-3xl font-bold mb-10">Badge</h1>

    <div class="grid md:grid-cols-2 gap-x-8 gap-y-12">
    <KitchenSinkSection title="Variants">
      <div class="flex items-center gap-2 flex-wrap">
        <Badge>Default</Badge>
        <Badge variant="secondary">Secondary</Badge>
        <Badge variant="destructive">Destructive</Badge>
        <Badge variant="outline">Outline</Badge>
      </div>
    </KitchenSinkSection>

    <KitchenSinkSection title="Pill Shape">
      <div class="flex items-center gap-2 flex-wrap">
        <Badge class="rounded-full">Default</Badge>
        <Badge variant="secondary" class="rounded-full">Secondary</Badge>
        <Badge variant="destructive" class="rounded-full">Destructive</Badge>
        <Badge variant="outline" class="rounded-full">Outline</Badge>
      </div>
    </KitchenSinkSection>

    <KitchenSinkSection title="With Icons">
      <div class="flex items-center gap-2 flex-wrap">
        <Badge>
          <CheckIcon class="size-3" />
          Success
        </Badge>
        <Badge variant="destructive">
          <XIcon class="size-3" />
          Error
        </Badge>
        <Badge variant="secondary">
          <AlertTriangleIcon class="size-3" />
          Warning
        </Badge>
        <Badge variant="outline">
          <InfoIcon class="size-3" />
          Info
        </Badge>
      </div>
    </KitchenSinkSection>

    <KitchenSinkSection title="As Link">
      <div class="flex items-center gap-2 flex-wrap">
        <a href="#badge-link">
          <Badge>Clickable Badge</Badge>
        </a>
        <a href="#badge-link">
          <Badge variant="outline">Link Badge</Badge>
        </a>
      </div>
    </KitchenSinkSection>

    <KitchenSinkSection title="Counter Badges">
      <div class="flex items-center gap-3 flex-wrap">
        <Badge>1</Badge>
        <Badge variant="secondary">24</Badge>
        <Badge variant="destructive">99+</Badge>
        <Badge variant="outline">0</Badge>
      </div>
    </KitchenSinkSection>

    <KitchenSinkSection title="Custom Colors">
      <div class="flex items-center gap-2 flex-wrap">
        <Badge class="bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200 hover:bg-blue-200 dark:hover:bg-blue-800">Info</Badge>
        <Badge class="bg-amber-100 text-amber-800 dark:bg-amber-900 dark:text-amber-200 hover:bg-amber-200 dark:hover:bg-amber-800">Warning</Badge>
        <Badge class="bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200 hover:bg-green-200 dark:hover:bg-green-800">Success</Badge>
        <Badge class="bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200 hover:bg-purple-200 dark:hover:bg-purple-800">New</Badge>
      </div>
    </KitchenSinkSection>
    </div>
  </section>
</KitchenSinkLayout>
