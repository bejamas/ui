---
import KitchenSinkLayout from "@/components/KitchenSinkLayout.astro";
import KitchenSinkSection from "@/components/KitchenSinkSection.astro";
import { Skeleton } from "@bejamas/ui/components/skeleton";
---

<KitchenSinkLayout>
  <section class="max-w-5xl mx-auto py-20 px-5 space-y-12">
    <h1 class="text-3xl font-bold mb-10">Skeleton</h1>

    <div class="grid md:grid-cols-2 gap-x-8 gap-y-12">
    <KitchenSinkSection title="Basic Shapes">
      <div class="space-y-4">
        <Skeleton class="h-4 w-[250px]" />
        <Skeleton class="h-12 w-12 rounded-full" />
        <Skeleton class="h-[125px] w-full" />
      </div>
    </KitchenSinkSection>

    <KitchenSinkSection title="Avatar + Text">
      <div class="flex items-center space-x-4">
        <Skeleton class="h-12 w-12 rounded-full" />
        <div class="space-y-2">
          <Skeleton class="h-4 w-[200px]" />
          <Skeleton class="h-4 w-[150px]" />
        </div>
      </div>
    </KitchenSinkSection>

    <KitchenSinkSection title="Card">
      <div class="rounded-xl border p-4 space-y-4">
        <div class="flex items-center space-x-4">
          <Skeleton class="h-10 w-10 rounded-full" />
          <div class="space-y-2 flex-1">
            <Skeleton class="h-4 w-3/4" />
            <Skeleton class="h-3 w-1/2" />
          </div>
        </div>
        <Skeleton class="h-[140px] w-full rounded-lg" />
      </div>
    </KitchenSinkSection>
    </div>

    <KitchenSinkSection title="Table">
      <div class="rounded-xl border overflow-hidden">
        <div class="grid grid-cols-3 gap-4 p-4 border-b bg-muted/50">
          <Skeleton class="h-4 w-20" />
          <Skeleton class="h-4 w-24" />
          <Skeleton class="h-4 w-16" />
        </div>
        <div class="grid grid-cols-3 gap-4 p-4 border-b">
          <Skeleton class="h-4 w-28" />
          <Skeleton class="h-4 w-32" />
          <Skeleton class="h-4 w-20" />
        </div>
        <div class="grid grid-cols-3 gap-4 p-4 border-b">
          <Skeleton class="h-4 w-24" />
          <Skeleton class="h-4 w-28" />
          <Skeleton class="h-4 w-16" />
        </div>
        <div class="grid grid-cols-3 gap-4 p-4 border-b">
          <Skeleton class="h-4 w-20" />
          <Skeleton class="h-4 w-36" />
          <Skeleton class="h-4 w-24" />
        </div>
        <div class="grid grid-cols-3 gap-4 p-4 border-b">
          <Skeleton class="h-4 w-32" />
          <Skeleton class="h-4 w-24" />
          <Skeleton class="h-4 w-20" />
        </div>
        <div class="grid grid-cols-3 gap-4 p-4">
          <Skeleton class="h-4 w-28" />
          <Skeleton class="h-4 w-20" />
          <Skeleton class="h-4 w-28" />
        </div>
      </div>
    </KitchenSinkSection>

    <KitchenSinkSection title="Form">
      <div class="max-w-sm space-y-6">
        <div class="space-y-2">
          <Skeleton class="h-4 w-16" />
          <Skeleton class="h-9 w-full rounded-lg" />
        </div>
        <div class="space-y-2">
          <Skeleton class="h-4 w-20" />
          <Skeleton class="h-9 w-full rounded-lg" />
        </div>
        <Skeleton class="h-9 w-24 rounded-lg" />
      </div>
    </KitchenSinkSection>
  </section>
</KitchenSinkLayout>
