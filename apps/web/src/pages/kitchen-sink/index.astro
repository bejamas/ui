---
import KitchenSinkLayout from "@/components/KitchenSinkLayout.astro";

const pages = [
  { href: "/kitchen-sink/accordion", label: "Accordion", description: "Collapsible sections, multiple open, default open, disabled items" },
  { href: "/kitchen-sink/alert", label: "Alert", description: "Default, destructive, with icons, custom styled alerts" },
  { href: "/kitchen-sink/badge", label: "Badge", description: "Variants, pill shape, sizes, with icons, as links" },
  { href: "/kitchen-sink/button", label: "Button", description: "Variants, sizes, icons, loading states, as links" },
  { href: "/kitchen-sink/card", label: "Card", description: "Default, ghost, with media, login form, actions, grid layout" },
  { href: "/kitchen-sink/checkbox", label: "Checkbox", description: "Basic, checked, disabled, groups, indeterminate state" },
  { href: "/kitchen-sink/combobox", label: "Combobox", description: "Searchable dropdowns, groups, async loading" },
  { href: "/kitchen-sink/dialog", label: "Dialog", description: "Basic, with form, confirmation, scrollable, programmatic control" },
  { href: "/kitchen-sink/dropdown-menu", label: "Dropdown Menu", description: "Submenus, checkboxes, radio groups, keyboard navigation" },
  { href: "/kitchen-sink/input", label: "Input", description: "Types, labels, disabled, invalid, file upload, with button" },
  { href: "/kitchen-sink/navigation-menu", label: "Navigation Menu", description: "Horizontal nav with dropdowns and mega menus" },
  { href: "/kitchen-sink/popover", label: "Popover", description: "Positioning, triggers, nested content" },
  { href: "/kitchen-sink/select", label: "Select", description: "Dropdowns, groups, scrollable lists, form integration" },
  { href: "/kitchen-sink/slider", label: "Slider", description: "Single, range, multi-thumb, vertical, step controls" },
  { href: "/kitchen-sink/switch", label: "Switch", description: "Basic, disabled, with descriptions, settings panel" },
  { href: "/kitchen-sink/tabs", label: "Tabs", description: "Basic, with indicator, cards, disabled, overflow" },
  { href: "/kitchen-sink/toggle", label: "Toggle", description: "Variants, sizes, pressed states, programmatic control" },
  { href: "/kitchen-sink/toggle-group", label: "Toggle Group", description: "Single/multiple selection, orientations, sizes" },
  { href: "/kitchen-sink/tooltip", label: "Tooltip", description: "Sides, alignment, delay, icon buttons, keyboard shortcuts" },
];
---

<KitchenSinkLayout>
  <section class="max-w-2xl mx-auto py-20 px-5 space-y-8">
    <div>
      <h1 class="text-3xl font-bold">Kitchen Sink</h1>
      <p class="text-muted-foreground mt-2">Component test pages for manual QA and visual review.</p>
    </div>

    <div class="grid gap-3">
      {pages.map(({ href, label, description }) => (
        <a
          href={href}
          class="block p-4 border border-border rounded-lg hover:bg-muted/50 transition-colors"
        >
          <div class="font-medium text-foreground">{label}</div>
          <div class="text-sm text-muted-foreground mt-1">{description}</div>
        </a>
      ))}
    </div>
  </section>
</KitchenSinkLayout>
