---
import KitchenSinkLayout from "@/components/KitchenSinkLayout.astro";
import KitchenSinkSection from "@/components/KitchenSinkSection.astro";
import { StickySurface } from "@bejamas/ui/components/sticky-surface";
import { Button } from "@bejamas/ui/components/button";
---

<KitchenSinkLayout>
  <section class="max-w-5xl mx-auto py-20 px-5 space-y-12">
    <h1 class="text-3xl font-bold mb-10">Sticky Surface</h1>

    <KitchenSinkSection title="Line Effect">
      <div class="overflow-y-auto max-h-[320px] w-full border rounded-lg">
        <StickySurface effects={["line"]}>
          <div class="px-4 py-3 bg-background">
            <h3 class="text-sm font-medium">Line Effect Header</h3>
          </div>
        </StickySurface>
        <div class="h-[800px] p-4">
          <p class="text-sm text-muted-foreground">Scroll down to see the line effect appear below the header.</p>
        </div>
      </div>
    </KitchenSinkSection>

    <KitchenSinkSection title="Elevate Effect">
      <div class="overflow-y-auto max-h-[320px] w-full border rounded-lg">
        <StickySurface effects={["elevate"]}>
          <div class="px-4 py-3 bg-background">
            <h3 class="text-sm font-medium">Elevate Effect Header</h3>
          </div>
        </StickySurface>
        <div class="h-[800px] p-4">
          <p class="text-sm text-muted-foreground">Scroll down to see the shadow appear on the header.</p>
        </div>
      </div>
    </KitchenSinkSection>

    <KitchenSinkSection title="Backdrop Effect">
      <div class="overflow-y-auto max-h-[320px] w-full border rounded-lg">
        <StickySurface effects={["backdrop"]}>
          <div class="px-4 py-3">
            <h3 class="text-sm font-medium">Backdrop Effect Header</h3>
          </div>
        </StickySurface>
        <div class="h-[800px] p-4">
          <p class="text-sm text-muted-foreground">Scroll down to see the backdrop blur appear on the header.</p>
        </div>
      </div>
    </KitchenSinkSection>

    <KitchenSinkSection title="Combined Effects">
      <div class="overflow-y-auto max-h-[320px] w-full border rounded-lg">
        <StickySurface effects={["line", "elevate"]}>
          <div class="px-4 py-3 bg-background">
            <h3 class="text-sm font-medium">Line + Elevate Header</h3>
          </div>
        </StickySurface>
        <div class="h-[800px] p-4">
          <p class="text-sm text-muted-foreground">Scroll down to see both line and shadow effects.</p>
        </div>
      </div>
    </KitchenSinkSection>

    <KitchenSinkSection title="With observeStuck">
      <div class="overflow-y-auto max-h-[320px] w-full border rounded-lg">
        <StickySurface effects={["line", "elevate"]} observeStuck>
          <div class="px-4 py-3 bg-background flex items-center justify-between">
            <h3 class="text-sm font-medium">Sticky Navigation</h3>
            <div class="flex items-center gap-2">
              <Button variant="ghost" size="sm" class="group-[.is-stuck]/surface:opacity-0 transition-opacity">Log in</Button>
              <Button size="sm">
                <span class="group-[.is-stuck]/surface:hidden">Contact</span>
                <span class="hidden group-[.is-stuck]/surface:inline">Get a demo</span>
              </Button>
            </div>
          </div>
        </StickySurface>
        <div class="h-[800px] p-4">
          <p class="text-sm text-muted-foreground">Scroll down to see the "Log in" button fade and "Contact" change to "Get a demo" when stuck.</p>
        </div>
      </div>
    </KitchenSinkSection>
  </section>
</KitchenSinkLayout>
