---
import BrowserHero from "@/components/BrowserHero.astro";
import StarlightPage from "@astrojs/starlight/components/StarlightPage.astro";
---

<StarlightPage
  frontmatter={{
    title: "The UI system for Astro. Copy. Customize. Ship.",
    description:
      "Clean, lightweight Astro UI components built with Tailwind v4 and zero dependencies. Copy-paste the snippet into your project and fully own the code.",
    template: "splash",
    hero: {
      title: `The UI system for Astro. Copy. <em class="font-serif relative inline-block pr-0.5"><div class="absolute top-0.5 lg:top-1 w-full pointer-events-none h-8 lg:h-12 border-2 border-accent"><span class="absolute -left-2 -top-2 size-2 border-2 border-accent"></span><span class="absolute -right-2 -top-2 size-2 border-2 border-accent"></span><span class="absolute -left-2 -bottom-2 size-2 border-2 border-accent"></span><span class="absolute -right-2 -bottom-2 size-2 border-2 border-accent"></span></div>Customize.</em> Ship.`,
      actions: [
        {
          text: "Get Started",
          link: "/docs/introduction",
          icon: "right-arrow",
        },
      ],
    },
  }}
>
  <BrowserHero />
  <div id="browser-hero-panel-end" class="w-full mt-[-1px] h-px bottom-0 -z-10">
  </div>
  <div
    class="hidden lg:block h-full fixed scroll-fade-out bg-muted top-14 border left-6 right-6 rounded-t-3xl"
  >
  </div>
  <div
    class="h-60 z-20 fixed mix-blend-hard-light pointer-events-none bg-gradient-to-t from-muted to-transparent bottom-0 left-5 right-5 scroll-fade-out-and-move-bottom"
  >
  </div>
</StarlightPage>

<style is:global>
  @reference "tailwindcss";

  :root {
    --sl-nav-height: auto;
  }

  .hero h1 {
    letter-spacing: calc(var(--letter-spacing) - 0.025em);
    @apply text-3xl font-medium text-left text-balance block max-w-xl leading-[1.15];
  }

  .kudos {
    display: none;
  }

  .hero .copy {
    @apply items-start;
  }

  @media (min-width: 50rem) {
    .hero h1 {
      @apply text-5xl;
    }
  }

  @media (min-width: 64rem) {
    html {
      scroll-snap-type: y mandatory;
    }
  }

  .content-panel:first-child {
    @apply pt-12;
  }

  .main-frame {
    height: 100svh;
    padding-top: 0;
    padding-right: 0;
  }

  .main-frame > .lg\:sl-flex,
  .main-frame main[data-pagefind-body],
  .main-frame main > .content-panel:last-child,
  .main-frame main > .content-panel:last-child > .sl-container,
  .main-frame
    main
    > .content-panel:last-child
    > .sl-container
    > .sl-markdown-content {
    @apply h-full;
  }

  .main-frame > div {
    background-color: transparent;
    border: 0;
  }

  .main-pane > main {
    @apply pb-0;
  }

  .hero {
    opacity: 1;
    transform-origin: left center;

    @apply px-0 lg:px-4 pt-8 pb-18 z-10 lg:max-w-[92%] mx-auto relative;
  }

  @media (min-width: 64rem) {
    .hero {
      scroll-snap-align: center;

      @apply sticky top-18 px-0 pt-12;
    }

    .main-pane > main {
      padding: var(--sl-main-pad);
    }
  }

  @supports (animation-timeline: auto) {
    @media (min-width: 64rem) {
      .hero {
        animation: fadeOutAtBottom ease-out both;
        animation-timeline: scroll(root block);
        animation-range: 40% 80%;
      }
    }
  }

  .sl-container {
    @apply max-w-full;
  }

  .sl-markdown-content {
    @apply mx-auto max-w-full mt-0 pt-0;
  }

  .fade {
    @apply hidden;
  }

  .actions {
    @apply justify-start;
  }

  footer.sl-flex {
    @apply hidden;
  }

  @keyframes fadeOutAtBottom {
    to {
      opacity: 0;
      transform: scale(0.99);
    }
  }

  @keyframes fadeOutAtBottomAndMoveBottom {
    to {
      opacity: 0;
      transform: translateY(100%);
    }
  }

  @keyframes maxWidthFull {
    to {
      transform: scale(1) translateZ(0);
    }
  }

  @media (min-width: 64rem) {
    .scroll-fade-out {
      animation: fadeOutAtBottom linear both;
      animation-timeline: scroll(root block);
      animation-range: 40% 80%;
    }

    .scroll-fade-out-and-move-bottom {
      animation: fadeOutAtBottomAndMoveBottom linear both;
      animation-timeline: scroll(root block);
      animation-range: 40% 80%;
    }

    .browser {
      transform: scale(0.92) translateZ(0);
      animation: maxWidthFull linear both;
      animation-timeline: scroll(root block);
      animation-range: 0% 100%;
      transform-origin: center top;
    }
  }
</style>
