---
import BlockExampleLayout from "@/components/BlockExampleLayout.astro";
import { Button } from "@bejamas/ui/components/button";
import NavigationMenu from "@/ui-next/NavigationMenu.astro";
import { StickySurface } from "@bejamas/ui/components/sticky-surface";
---

<BlockExampleLayout theme="tokyo">
  <StickySurface
    observeStuck
    class="[&.is-stuck]:shadow-[0_1px_0_0_rgb(0_0_0_/_0.16)] bg-background"
  >
    <NavigationMenu class="max-w-[1600px] mx-auto">
      <div slot="logo" class="col-span-6">
        <a
          href="/"
          class="text-4xl inline-block scale-400 duration-150 origin-top-left group-[.is-stuck]/surface:scale-100 transition-transform ease-in-out font-extrabold tracking-tighter"
        >
          VIRA
        </a>
      </div>
      <ul slot="links" class="flex -ml-4 col-span-4 items-center space-x-2">
        <li>
          <Button as="a" href="/" variant="link" class="text-base"
            >Developers</Button
          >
        </li>
        <li>
          <Button as="a" href="/" variant="link" class="text-base"
            >Business</Button
          >
        </li>
        <li>
          <Button as="a" href="/" variant="link" class="text-base"
            >Resources</Button
          >
        </li>
        <li>
          <Button as="a" href="/" variant="link" class="text-base"
            >Pricing</Button
          >
        </li>
        <li>
          <Button as="a" href="/" variant="link" class="text-base"
            >Contact</Button
          >
        </li>
      </ul>
      <div
        slot="actions"
        class="flex col-span-2 justify-end items-center gap-2"
      >
        <Button variant="outline" class="text-base">Sign Up</Button>
      </div>
    </NavigationMenu>
  </StickySurface>

  <section class="py-20 relative z-10 max-w-[1600px] mx-auto px-5">
    <h1 class="text-7xl font-medium tracking-tight">
      AI-powered financial management for businesses
    </h1>
    <p class="text-3xl mt-8">
      A powerful combination of efficiency, quality and flexibility for anyone
      looking to streamline their design workflow.
    </p>
    <div class="mt-10">
      <Button size="lg">Get Started</Button>
    </div>
  </section>
</BlockExampleLayout>
