  <section class="py-20 max-w-5xl mx-auto">
    <div class="flex justify-between items-center mb-10">
      <h2 class="text-4xl">Latest News</h2>
      <Button variant="outline">View All</Button>
    </div>
    <div class="grid grid-cols-3 gap-4">
      <Card>
        <div slot="media">
          <img src="https://placehold.co/600x400" alt="Feature 1" />
        </div>
        <div slot="header" let:foo="bar">
          <h3>Feature 1</h3>
        </div>
        <div slot="content">
          <p>
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Quisquam,
            quos.
          </p>
        </div>
      </Card>
    </div>
  </section>

  <Footer class="rounded-t-xl">
    <div
      class="flex flex-col items-center gap-4 py-20 border-b border-footer-border"
    >
      <h3 class="text-4xl mb-2">Get started with ChatGPT</h3>
      <Button>Download</Button>
    </div>
    <div class="py-10 grid grid-cols-4 gap-4 mx-auto max-w-5xl">
      <div>Acme, Inc. Logo</div>
      <div>
        <LinkGroup
          title="Resources"
          items={[
            { label: "Blog", href: "/blog" },
            { label: "Documentation", href: "/docs" },
            { label: "Pricing", href: "/pricing" },
            { label: "Support", href: "/support" },
          ]}
        />
        <LinkGroup
          title="Resources"
          items={[
            { label: "Blog", href: "/blog" },
            { label: "Documentation", href: "/docs" },
            { label: "Pricing", href: "/pricing" },
            { label: "Support", href: "/support" },
          ]}
        />
      </div>

      <LinkGroup
        title="Company"
        items={[
          { label: "Home", href: "/" },
          { label: "About", href: "/about" },
          { label: "Contact", href: "/contact" },
          { label: "Careers", href: "/careers" },
          { label: "Press", href: "/press" },
        ]}
      />
      <LinkGroup
        title="Legal"
        items={[
          { label: "Privacy Policy", href: "/privacy-policy" },
          { label: "Terms of Service", href: "/terms-of-service" },
        ]}
      />
    </div>
    <Separator />
    <div class="mx-auto max-w-5xl py-6">
      <p>2025 Bejamas. All rights reserved.</p>
    </div>
  </Footer>
</BlockExampleLayout>
