---
import BlockExampleLayout from "@/components/BlockExampleLayout.astro";
import Button from "@bejamas/ui/components/Button.astro";
import Card from "@bejamas/ui/components/Card.astro";
import { ArrowRight } from "@lucide/astro";
---

<BlockExampleLayout>
  <div>
    <Card variant="ghost" class="py-8 px-8 rounded-none">
      <Card part="content" class="flex flex-col items-center justify-center p-4 md:py-32">
        <Card part="title" class="text-3xl md:text-6xl">Your Wealth. Fully accounted</Card>
        <Card part="description" class="mt-6 text-center max-w-[60ch]">A powerful combination of efficiency, quality and flexibility for anyone looking to streamline their design workflow.</Card>
        <Button as="a" href="#" class="mt-8">
          Order now
          <ArrowRight class="size-4" />
        </Button>
      </Card>
    </Card>
  </div>
</BlockExampleLayout>
