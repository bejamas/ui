        <path
          d="M26.8368 4.27555C29.4619 8.90983 31.0868 14.2956 31.0868 20.0571C31.0868 25.8187 29.5869 31.2045 26.8368 35.8387C26.3368 36.8408 26.5869 37.968 27.5869 38.5943C28.5869 39.0953 29.7119 38.8448 30.3369 37.8428C33.3369 32.5822 35.0869 26.5702 35.0869 20.0571C35.0869 13.5441 33.3369 7.53207 30.3369 2.27154C29.8369 1.26953 28.5869 1.01903 27.5869 1.52003C26.5869 2.02104 26.3368 3.27354 26.8368 4.27555Z"
          fill="#7433FF"></path>
      </svg>

      <img
        src="/demo/card-code.png"
        class="absolute top-40 left-16"
        width="73"
        height="55"
      />

      <div
        class="absolute text-2xl font-medium bottom-0 inset-x-0 bg-[#252525] text-white px-16 py-5"
      >
      </div>
    </div>
  </section>

  <section class="max-w-6xl px-5 mx-auto py-20">
    <Card
      class="relative aspect-[320/390] bg-gray-100 dark:bg-gray-800 w-full max-w-[320px] border-none"
      hoverVariant="glass"
    >
      <Fragment slot="media">
        <img
          alt="Team Member"
          aria-hidden="true"
          class="pointer-events-none absolute inset-0 h-full w-full select-none object-cover"
          src="/demo/team/5fccb1d99609bb713db5b36177a98320f1a438e5.png"
        />
        <div
          aria-hidden="true"
          class="pointer-events-none absolute bottom-0 left-0 right-0 h-[64px] bg-gradient-to-t from-black/50 to-transparent"
        >
        </div>
      </Fragment>
      <div slot="footer" class="text-white">
        <p class="text-lg">John Doe</p>
        <p class="opacity-80 text-sm">john.doe@example.com</p>
      </div>

      <div
        slot="hiddenContent"
        class="bg-primary flex flex-col inset-0 absolute z-10 opacity-0 group-hover/card:opacity-100 transition-opacity duration-300 p-6 text-white"
      >
        <p class="text-xl font-medium">Thom Krupa</p>
        <p class="opacity-80 text-sm mt-6">
          Damian is an Investment Analyst with over 7 years of experience in
          market research and portfolio management, helping clients make
          informed investment decisions.
        </p>
        <div class="self-end mt-auto">
          <Button variant="outline">View Profile</Button>
        </div>
      </div>
    </Card>
  </section>

  <section class="max-w-6xl px-5 mx-auto py-20">
    <h2 class="text-4xl">Frequently asked questions</h2>
    <div class="grid grid-cols-12 gap-4 text-xl mt-10">
      <div class="col-span-4 pt-4">
        <p>General</p>
      </div>
      <Accordion class="col-span-8">
        {
          faq.map((item) => (
            <details class="border-b">
              <summary>
                {item.question}
                <ChevronDownIcon class="size-4" />
              </summary>
              <div data-slot="accordion-content" class="pb-10">
                <p>{item.answer}</p>
              </div>
            </details>
          ))
        }
      </Accordion>
    </div>
  </section>

  <section>
    <Separator class="my-20" />
    <Marquee class="lg:text-[6rem]" time={90}>
      {
        Array.from({ length: 3 }).map(() => (
          <Fragment>
            <p class="mx-10">Get ready to talk</p>
            <p class="mx-10 text-primary relative">
              v
              <svg
                width="13"
                height="13"
                viewBox="0 0 13 13"
                fill="none"
