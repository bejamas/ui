---
import BlockExampleLayout from "@/components/BlockExampleLayout.astro";
import Button from "@bejamas/ui/components/Button.astro";
import NavigationMenu from "@bejamas/ui/components/NavigationMenu.astro";
import MenuDropdown from "@bejamas/ui/components/Dropdown.astro";
import StickySurface from "@bejamas/ui/components/StickySurface.astro";
import Breadcrumbs from "@bejamas/ui/components/Breadcrumbs.astro";
import Separator from "@bejamas/ui/components/Separator.astro";
import Footer from "@bejamas/ui/components/Footer.astro";
import LinkGroup from "@bejamas/ui/components/LinkGroup.astro";
import Input from "@bejamas/ui/components/Input.astro";
import Label from "@bejamas/ui/components/Label.astro";
import Card from "@bejamas/ui/components/Card.astro";
import Marquee from "@bejamas/ui/components/Marquee.astro";
import Accordion from "@bejamas/ui/components/Accordion.astro";

import { SlashIcon, ChevronDownIcon } from "@lucide/astro";

const faq = [
  {
    question: "What services does Vira offer?",
    answer: "Vira offers a range of services to help you manage your finances.",
  },
  {
    question: "How does Vira’s piricing work?",
    answer:
      "Vira’s pricing is based on the number of users and the features you need. We offer a free trial for 14 days, so you can try it out before you buy.",
  },
  {
    question: "What is the minimum number of users required?",
    answer:
      "The minimum number of users required is 1. You can add more users as needed.",
  },
];
---

<BlockExampleLayout theme="berlin">
  <StickySurface
    observeStuck
    class="[&.is-stuck]:shadow-sm bg-background"
    effects={["elevate"]}
    style="--stuck-shadow: var(--shadow-sm)"
  >
    <NavigationMenu class="max-w-6xl mx-auto">
      <div slot="logo" class="col-span-2">
        <p class="text-3xl font-extrabold tracking-tighter">VIRA</p>
      </div>
      <ul
        slot="links"
        class="flex col-span-8 items-center justify-center space-x-2"
      >
        <li>
          <Button as="a" href="/" variant="ghost" class="text-base"
            >Developers</Button
          >
        </li>
        <li>
          <Button as="a" href="/" variant="ghost" class="text-base"
            >Business</Button
          >
        </li>
        <li>
          <Button as="a" href="/" variant="ghost" class="text-base"
            >Resources</Button
          >
        </li>
        <li>
          <Button as="a" href="/" variant="ghost" class="text-base"
            >Pricing</Button
          >
        </li>
        <li>
          <Button as="a" href="/" variant="ghost" class="text-base"
            >Contact</Button
          >
        </li>
      </ul>
      <div
        slot="actions"
        class="flex col-span-2 justify-end items-center gap-2"
      >
        <Button
          variant="ghost"
          class="group-[.is-stuck]/surface:bg-primary group-[.is-stuck]/surface:text-primary-foreground text-base"
          >Get Started</Button
        >
        <!-- <Button
          class="w-20 group-[.is-stuck]/surface:w-25 duration-500 ease-out"
        >
          <span
            class="group-[.is-stuck]/surface:blur-sm group-[.is-stuck]/surface:opacity-0 absolute group-[.is-stuck]/surface:hidden transition-discrete duration-500 ease-out"
            >Contact</span
          >
          <span
            class="group-[.is-stuck]/surface:blur-none group-[.is-stuck]/surface:opacity-100 group-[.is-stuck]/surface:delay-150 group-[.is-stuck]/surface:block opacity-0 transition-all hidden blur-sm transition-discrete duration-500 ease-out"
            >Get a demo</span
          >
        </Button> -->
      </div>
    </NavigationMenu>
  </StickySurface>

  <section class="py-20 relative z-10 max-w-6xl mx-auto px-5 grid grid-cols-12">
    <div class="col-span-8">
      <h1 class="text-7xl font-medium tracking-tight">
        Your wealth.<br />Fully accounted.
      </h1>
    </div>
    <div class="col-span-4 mb-10">
      <p class="text-3xl">
        A powerful combination of efficiency, quality and flexibility for anyone
        looking to streamline their design workflow.
      </p>
    </div>

    <div class="col-span-8">
      <p
        class="text-[7.5rem] leading-none text-primary font-extrabold col-span-8"
      >
        V
      </p>
    </div>
    <div class="col-span-4">
      <Button size="lg">Book a demo</Button>
    </div>

    <Separator class="col-span-12 mt-10 mb-5" />

    <p class="text-[7.5rem] leading-none font-medium col-span-8">
      21.37<sup class="text-6xl -top-10 ml-2 relative">%</sup>
    </p>

    <div class="col-span-4">
      <p class="text-muted-foreground text-xl">
        * Approximate earning in year 2025
      </p>
    </div>
  </section>
  <!-- Background lines  -->
  <svg
    width="1600"
    height="826"
    viewBox="0 0 1600 826"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
    class="absolute top-64 left-0 w-full h-full pointer-events-none z-0"
  >
    <path
      d="M3457.91 783.176L1424.29 62.0501C1194.73 -19.35 944.175 -19.35 714.616 62.0501L-1319 783.176M2200.91 801.327L1353.1 151.964C1185.75 23.7805 953.227 23.7805 785.868 151.964L-61.9319 801.327M2118.67 1201L1361.27 258.894C1211.41 72.4857 927.586 72.4857 777.726 258.894L20.3268 1201"
      stroke="#666666"
      stroke-opacity="0.48"></path>
  </svg>

  <section class="pt-20 pb-40">
    <div
      class="mx-auto max-w-[37.5rem] aspect-[1.586] relative rounded-3xl overflow-clip"
    >
      <video
        src="/demo/card.mp4"
        muted
        loop
        autoplay
        class="w-full h-full object-cover"></video>

      <p
        class="absolute top-12 left-16 text-5xl font-extrabold text-foreground tracking-tighter"
      >
        VIRA
      </p>
      <!-- Wireless Icon -->
      <svg
        width="41"
        height="41"
        viewBox="0 0 41 41"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
        class="absolute top-13 right-16"
      >
