---
import BattlefieldLayout from "@/components/BattlefieldLayout.astro";

const pages = [
  { href: "/battlefield/select", label: "Select", description: "Dropdowns, groups, scrollable lists, form integration" },
  { href: "/battlefield/slider", label: "Slider", description: "Single, range, multi-thumb, vertical, step controls" },
  { href: "/battlefield/toggle", label: "Toggle", description: "Variants, sizes, pressed states, programmatic control" },
  { href: "/battlefield/toggle-group", label: "Toggle Group", description: "Single/multiple selection, orientations, sizes" },
];
---

<BattlefieldLayout>
  <section class="max-w-2xl mx-auto py-20 px-5 space-y-8">
    <div>
      <h1 class="text-3xl font-bold">Battlefield</h1>
      <p class="text-muted-foreground mt-2">Component test pages for manual QA and visual review.</p>
    </div>

    <div class="grid gap-3">
      {pages.map(({ href, label, description }) => (
        <a
          href={href}
          class="block p-4 border border-border rounded-lg hover:bg-muted/50 transition-colors"
        >
          <div class="font-medium text-foreground">{label}</div>
          <div class="text-sm text-muted-foreground mt-1">{description}</div>
        </a>
      ))}
    </div>
  </section>
</BattlefieldLayout>
